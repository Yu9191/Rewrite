    "repo": "https://t.me/GithubYu9191",
    "apps": [
        {
            "id": "PearVideoSettings",
            "name": "PearVideo 播放器设置",
            "keys": [
                "pear_custom_scheme",
                "pear_url_encode"
            ],
            "settings": [
                {
                    "id": "pear_custom_scheme",
                    "name": "播放器 Scheme",
                    "val": "",
                    "type": "selects",
                    "autoGrow": true,
                    "items": [
                        {
                            "key": "",
                            "label": "默认 (Lenna)"
                        },
                        {
                            "key": "lenna://x-callback-url/play?url=",
                            "label": "Lenna 视频库"
                        },
                        {
                            "key": "SenPlayer://x-callback-url/play?url=",
                            "label": "SenPlayer (播放)"
                        },
                        {
                            "key": "SenPlayer://x-callback-url/download?url=",
                            "label": "SenPlayer (下载+命名.mp4)"
                        },
                        {
                            "key": "infuse://x-callback-url/play?url=",
                            "label": "Infuse 播放器"
                        },
                        {
                            "key": "filebox://play?url=",
                            "label": "Fileball 文件管理"
                        },
                        {
                            "key": "vidhub://x-callback-url/play?url=",
                            "label": "VidHub 影库"
                        },
                        {
                            "key": "iina://weblink?url=",
                            "label": "IINA 播放器"
                        },
                        {
                            "key": "nplayer-http://",
                            "label": "nPlayer"
                        },
                        {
                            "key": "vlc://",
                            "label": "VLC 播放器"
                        },
                        {
                            "key": "kmplayer://",
                            "label": "KMPlayer"
                        },
                        {
                            "key": "Alook://",
                            "label": "Alook 浏览器"
                        },
                        {
                            "key": "http://",
                            "label": "Safari 浏览器"
                        }
                    ],
                    "desc": "选择播放器 Scheme，或在下方输入自定义 Scheme（例如: myplayer://play?url=）"
                },
                {
                    "id": "pear_url_encode",
                    "name": "URL 编码",
                    "val": "auto",
                    "type": "selects",
                    "items": [
                        {
                            "key": "auto",
                            "label": "自动（推荐）"
                        },
                        {
                            "key": "yes",
                            "label": "强制编码"
                        },
                        {
                            "key": "no",
                            "label": "不编码"
                        }
                    ],
                    "desc": "是否对播放地址进行 URL 编码（大部分 x-callback-url 需要编码）"
                }
            ],
            "author": "@Jsforbaby",
            "repo": "https://t.me/GithubYu9191",
            "icons": [
                "https://raw.githubusercontent.com/sE7En0908/Icon/refs/heads/master/1818.png",
                "https://raw.githubusercontent.com/sE7En0908/Icon/refs/heads/master/GitHub.png"
            ],
            "script": "https://raw.githubusercontent.com/Yu9191/Rewrite/refs/heads/main/pear.js"
        }
    ]
